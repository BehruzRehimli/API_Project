@model StudentEditVM

<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <h1>Student Edit</h1>
            <form method="post" >
                <div class="form-group">
                    <label asp-for="FullName">Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age">Age</label>
                    <input asp-for="Age" class="form-control" placeholder="Age">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Point">Point</label>
                    <input asp-for="Point" class="form-control" placeholder="Point">
                    <span asp-validation-for="Point" class="text-danger"></span>
                </div>                <div class="form-group">
                    <label asp-for="GroupId">Group</label>
                    <select asp-for="GroupId" class="form-control" placeholder="Age">
                        @foreach (GroupVMItem item in ViewBag.Groups.Groups)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>