@model GroupEditVM

<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <h1>Group edit</h1>
            <form method="post" >
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxStudentCount">Maximum Student Count</label>
                    <input asp-for="MaxStudentCount" class="form-control" placeholder="Count">
                    <span asp-validation-for="MaxStudentCount" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>