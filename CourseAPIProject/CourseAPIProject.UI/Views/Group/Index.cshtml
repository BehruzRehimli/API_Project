@model GroupVM
@{
    var count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <h1>Group</h1>
            <div class="text-right mb-3">
            <a asp-action="create" class="btn btn-outline-primary  my-3">Add Group</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Max Student Count</th>
                        <th scope="col">Students Count</th>
                        <th scope="col">Buttons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GroupVMItem item in Model.Groups)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.MaxStudentCount</td>
                            <td>@item.StudentsCount</td>
                            <td>
                                <a asp-action="edit" asp-route-id=@item.Id class="btn btn-outline-warning">Edit</a>
                                <a asp-action="delete" asp-route-id=@item.Id class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>